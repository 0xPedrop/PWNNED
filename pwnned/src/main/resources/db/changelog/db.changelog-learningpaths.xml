<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-learning-paths-table" author="pwnned">
        <createTable tableName="learning_paths">
            <column name="learning_path_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="category" type="VARCHAR(100)"/>
            <column name="difficulty" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-user-learning-path-join-table" author="pwnned">
        <createTable tableName="user_learning_path">
            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_user_lp_user" referencedTableName="users" referencedColumnNames="user_id"/>
            </column>
            <column name="learning_path_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_user_lp_path" referencedTableName="learning_paths" referencedColumnNames="learning_path_id"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="user_learning_path" columnNames="user_id, learning_path_id"/>
    </changeSet>
</databaseChangeLog>