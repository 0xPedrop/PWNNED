<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-users-table-final" author="pwnned">
        <createTable tableName="users">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(60)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(60)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="add-profile-image-url-to-users" author="pwnned">
        <addColumn tableName="users">
            <column name="profile_image_url" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>